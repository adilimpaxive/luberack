<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="com.app.luberack.Fragments.Shops">


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear_main"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linear_oil_change"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_oilchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Oil change"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/linear_background_oil_change"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#c54f4f"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linear_alignment"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_alignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Alignment"
                android:padding="10dp"
                android:textColor="@color/hint"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/linear_background_alignment"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linear_brakes"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_brakes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Brakes"
                android:textColor="@color/hint"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/linear_background_brakes"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linear_car_tire"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car_tire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Car tire"
                android:padding="10dp"
                android:textColor="@color/hint"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/linear_background_car_tire"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:background="@color/black"/>
        </LinearLayout>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/linear_main"
    android:layout_marginTop="10dp"
    android:id="@+id/relative"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sort by"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textColor="@color/hint"
        android:id="@+id/tv_sort_by"
        android:drawableLeft="@drawable/ic_dehaze_black_24dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searched results :"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:textColor="@color/hint" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="345"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:textColor="@color/hint"
            android:id="@+id/tv_searched_results"/>
    </LinearLayout>
</RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative"
        android:id="@+id/frame_profile"
        android:layout_marginTop="5dp"
     />

</RelativeLayout>
