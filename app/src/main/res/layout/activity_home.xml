<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.luberack.Home">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/btncolor">

            <ImageView
                android:visibility="gone"
                android:id="@+id/profile1"
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <android.support.v7.widget.SearchView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:gravity="end"
                android:id="@+id/searchview"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="5dp"
                android:visibility="gone"
                android:drawableRight="@drawable/ic_search_black_24dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textAlignment="viewStart"
                android:id="@+id/et_search"
                tools:ignore="RtlCompat" />


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:id="@+id/home_frame"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/navigation" />

    <android.support.design.widget.BottomNavigationView
        android:visibility="gone"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_alignParentBottom="true"
        android:background="#cdcdcd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:background="@color/background"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/home"
            app:srcCompat="@drawable/home_uns"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/oil_change"
            app:srcCompat="@drawable/oil_change_uns"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/alignment"
            app:srcCompat="@drawable/alignment_uns"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/brakes"
            app:srcCompat="@drawable/brakes_uns"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/repair_estimate"
            app:srcCompat="@drawable/tyre_estimate_uns"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/shop"
            app:srcCompat="@drawable/shop_uns"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/profile"
            app:srcCompat="@drawable/profile_uns"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

</RelativeLayout>
